{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "default_locale": "en",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "host_permissions": [
    "https://iltekin.com/*",
    "*://*.temu.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.temu.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "remove-local-temu@sezeriltekin",
      "strict_min_version": "109.0"
    }
  }
}